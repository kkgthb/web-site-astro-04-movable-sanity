---
import SectionBlue from "./section_blue.astro";
import SectionPink from "./section_pink.astro";
import SectionTaskList from "./section_task_list.astro";
import type { Section } from "../../utils/groqQueries";

export interface Props {
  section: Section;
}

const { section } = Astro.props;
---

<>
  {section._type === "sectionBlue" && <SectionBlue {section} />}
  {section._type === "sectionPink" && <SectionPink {section} />}
  {section._type === "sectionTaskList" && <SectionTaskList {section} />}
</>
